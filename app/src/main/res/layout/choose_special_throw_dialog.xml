<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="top">



        <TextView
            android:id="@+id/specialthrowinputtv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Special throw:"
            android:textSize="30sp" />

    <MultiAutoCompleteTextView
            android:id="@+id/specialthrowinputmactv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/specialthrowsequenceinputtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sequence(ex:10):"
        android:textSize="30sp" />

    <MultiAutoCompleteTextView
        android:id="@+id/specialthrowsequenceinputmactv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/onlySpecialThrowsWithHistoryCB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Only show special throws with history" />


</LinearLayout>

